Vagrant.configure(2) do |config|
  config.vm.define "control", primary: true do |h|
    h.vm.box = "ubuntu/focal64"
    h.vm.hostname =  "control"
    h.vm.network "private_network", ip: "192.168.135.140"
    h.vm.network "forwarded_port", guest: 22, host: "2200", id: "ssh"
    h.vm.provision :shell, inline: "echo 'export ANSIBLE_CONFIG=/vagrant/ansible/ansible.cfg' >> /home/vagrant/.bash_profile"
    h.vm.provision :shell, inline: 'sudo apt-get update; sudo apt-get autoremove -y; sudo apt-add-repository -y ppa:ansible/ansible; sudo apt-get install -y ansible=2.9.6+dfsg-1 software-properties-common python3-setuptools python3-dev git python3-pip pip3 install "yamllint==1.25.0" "ansible-lint==4.3.7"'
    h.vm.provision :shell, :inline => <<'EOF'
	if [ ! -f "/home/vagrant/.ssh/id_rsa" ]; then
  ssh-keygen -t rsa -N "" -f /home/vagrant/.ssh/id_rsa
fi
cp /home/vagrant/.ssh/id_rsa.pub /vagrant/control.pub
cat << 'SSHEOF' > /home/vagrant/.ssh/config
Host *
  StrictHostKeyChecking no
  UserKnownHostsFile=/dev/null
SSHEOF
chown -R vagrant:vagrant /home/vagrant/.ssh/
EOF
  end

  config.vm.define "wordpress" do |h|
    h.vm.box = "ubuntu/focal64"
    h.vm.hostname = "wordpress"
    h.vm.network "private_network", ip: "192.168.135.141"
    h.vm.network "forwarded_port", guest: 22, host: "2201", id: "ssh"
    h.vm.provision :shell, inline: 'cat /vagrant/control.pub >> /home/vagrant/.ssh/authorized_keys'
    h.vm.provision :shell, inline: 'test -e /usr/bin/python || (apt -y update && apt install -y python)'
  end

end
